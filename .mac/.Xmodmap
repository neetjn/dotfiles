! Clear Modifiers and Controls
clear control
clear mod1
clear mod4

! Swap Super_L and Alt_L Meta_L and Control_L
keycode 133 = Alt_L Meta_L
  ! Alt_L on Super_L 
keycode 64 = Control_L
  ! Control_L on Alt_L 
keycode 37 = Super_L
  ! Super_L on Control_L

! Bind Alt_R with Control_R
keycode 108 = Control_R

add control = Control_L Control_R
add mod1 = Alt_L Alt_R Meta_L Meta_R
add mod4 = Super_L Super_R
