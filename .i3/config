# exec "xmodmap ~/.Xmodmap"

# enable tap clicking on trackpad
# exec "xinput set-prop 11 288 1 && xinput set-prop 11 289 1"

# i3 gaps styling
for_window [class="^.*"] border pixel 1
smart_borders on
gaps inner 15
gaps outer 15

# i3 color scheme ; i3-style gruvbox theme

client.focused #689d6a #689d6a #282828 #282828
client.focused_inactive #1d2021 #1d2021 #928374 #282828
client.unfocused #32302f #32302f #928374 #282828
client.urgent #cc241d #cc241d #ebdbb2 #282828
