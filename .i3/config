# screenshots with gyazo
bindsym Print exec "gyazo"

# restore nitrogen settings on startup
exec "nitrogen --restore"

# start network manager applet
exec "nm-applet"

# start blueman-applet
# exec "blueman-applet"

# start redshift
exec "redshift-gtk"

